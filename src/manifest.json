{
  "manifest_version": 3,
  "name": "SeReTo helper",
  "version": "0.1.0",
  "description": "Simplified reporting of cookie issues in SeReTo.",
  "homepage_url": "https://github.com/s3r3t0/web-extension",

  "browser_specific_settings": {
    "gecko": {
      "id": "{56262bf0-5d1a-43b1-9930-81de25265eda}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "icons": {
    "48": "icons/sereto.png",
    "96": "icons/sereto@2x.png"
  },

  "permissions": [
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_title": "SeReTo helper",
    "default_popup": "popup/sereto.html",
    "default_icon": {
      "19": "icons/default19.png",
      "38": "icons/default38.png"
    }
  }
}
